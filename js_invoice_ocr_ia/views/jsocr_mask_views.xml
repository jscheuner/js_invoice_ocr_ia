<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ===================================================================
         List View for jsocr.mask (Story 6.6)
         =================================================================== -->
    <record id="jsocr_mask_view_list" model="ir.ui.view">
        <field name="name">jsocr.mask.view.list</field>
        <field name="model">jsocr.mask</field>
        <field name="arch" type="xml">
            <list string="Masques d'extraction" default_order="usage_count desc">
                <field name="name"/>
                <field name="partner_id" string="Fournisseur"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="usage_count" string="Utilisations"/>
                <field name="create_date" string="Cree le"/>
            </list>
        </field>
    </record>

    <!-- ===================================================================
         Form View for jsocr.mask (Story 6.6)
         =================================================================== -->
    <record id="jsocr_mask_view_form" model="ir.ui.view">
        <field name="name">jsocr.mask.view.form</field>
        <field name="model">jsocr.mask</field>
        <field name="arch" type="xml">
            <form string="Masque d'extraction">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="Nom du masque"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="usage_count" readonly="1"/>
                        </group>
                        <group>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Donnees du masque" name="mask_data">
                            <field name="mask_data" widget="ace" options="{'mode': 'json'}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ===================================================================
         Search View for jsocr.mask (Story 6.6)
         =================================================================== -->
    <record id="jsocr_mask_view_search" model="ir.ui.view">
        <field name="name">jsocr.mask.view.search</field>
        <field name="model">jsocr.mask</field>
        <field name="arch" type="xml">
            <search string="Rechercher masques">
                <field name="name"/>
                <field name="partner_id"/>
                <filter string="Actifs" name="filter_active"
                        domain="[('active', '=', True)]"/>
                <filter string="Archives" name="filter_archived"
                        domain="[('active', '=', False)]"/>
                <separator/>
                <group expand="0" string="Regrouper par">
                    <filter string="Fournisseur" name="groupby_partner"
                            context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ===================================================================
         Action for masks (Story 6.6)
         =================================================================== -->
    <record id="jsocr_mask_action" model="ir.actions.act_window">
        <field name="name">Masques d'extraction</field>
        <field name="res_model">jsocr.mask</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="jsocr_mask_view_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun masque d'extraction
            </p>
            <p>
                Les masques sont generes automatiquement apres 3 factures
                traitees avec succes pour un meme fournisseur.
            </p>
        </field>
    </record>

    <!-- ===================================================================
         Account Pattern Views (bonus - manage learned patterns)
         =================================================================== -->
    <record id="jsocr_account_pattern_view_list" model="ir.ui.view">
        <field name="name">jsocr.account.pattern.view.list</field>
        <field name="model">jsocr.account.pattern</field>
        <field name="arch" type="xml">
            <list string="Patterns de compte" default_order="usage_count desc">
                <field name="partner_id" string="Fournisseur"/>
                <field name="keywords"/>
                <field name="account_id" string="Compte"/>
                <field name="usage_count" string="Utilisations"/>
                <field name="last_used" string="Dernier usage"/>
            </list>
        </field>
    </record>

    <record id="jsocr_account_pattern_action" model="ir.actions.act_window">
        <field name="name">Patterns de compte</field>
        <field name="res_model">jsocr.account.pattern</field>
        <field name="view_mode">list</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun pattern appris
            </p>
            <p>
                Les patterns sont appris automatiquement quand des factures OCR sont validees.
            </p>
        </field>
    </record>

</odoo>
