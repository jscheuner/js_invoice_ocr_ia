<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Root menu for OCR IA -->
    <menuitem id="menu_jsocr_root"
              name="OCR IA"
              sequence="100"
              groups="js_invoice_ocr_ia.group_jsocr_user"
              web_icon="js_invoice_ocr_ia,static/description/icon.png"/>

    <!-- Import Jobs submenu (Story 4.13) -->
    <menuitem id="menu_jsocr_jobs"
              name="Jobs d'import"
              parent="menu_jsocr_root"
              sequence="5"/>

    <!-- All jobs -->
    <menuitem id="menu_jsocr_import_jobs"
              name="Tous les jobs"
              parent="menu_jsocr_jobs"
              action="jsocr_import_job_action"
              sequence="10"/>

    <!-- Pending jobs -->
    <menuitem id="menu_jsocr_import_jobs_pending"
              name="En attente"
              parent="menu_jsocr_jobs"
              action="jsocr_import_job_action_pending"
              sequence="20"/>

    <!-- Error jobs -->
    <menuitem id="menu_jsocr_import_jobs_errors"
              name="En erreur"
              parent="menu_jsocr_jobs"
              action="jsocr_import_job_action_errors"
              sequence="30"/>

    <!-- OCR Invoices submenu (Story 5.6, 5.7) -->
    <menuitem id="menu_jsocr_invoices"
              name="Factures OCR"
              parent="menu_jsocr_root"
              sequence="10"/>

    <!-- My OCR invoices (for standard users) -->
    <menuitem id="menu_jsocr_invoices_mine"
              name="Mes factures"
              parent="menu_jsocr_invoices"
              action="jsocr_invoice_action_mine"
              sequence="10"/>

    <!-- All OCR invoices (for managers) -->
    <menuitem id="menu_jsocr_invoices_all"
              name="Toutes les factures"
              parent="menu_jsocr_invoices"
              action="jsocr_invoice_action"
              groups="js_invoice_ocr_ia.group_jsocr_manager"
              sequence="20"/>

    <!-- Apprentissage submenu (Story 6.4, 6.6) -->
    <menuitem id="menu_jsocr_learning"
              name="Apprentissage"
              parent="menu_jsocr_root"
              groups="js_invoice_ocr_ia.group_jsocr_manager"
              sequence="20"/>

    <!-- Corrections history -->
    <menuitem id="menu_jsocr_corrections"
              name="Historique Corrections"
              parent="menu_jsocr_learning"
              action="jsocr_correction_action"
              sequence="10"/>

    <!-- Masks management -->
    <menuitem id="menu_jsocr_masks"
              name="Masques d'extraction"
              parent="menu_jsocr_learning"
              action="jsocr_mask_action"
              sequence="20"/>

    <!-- Account patterns -->
    <menuitem id="menu_jsocr_patterns"
              name="Patterns de compte"
              parent="menu_jsocr_learning"
              action="jsocr_account_pattern_action"
              sequence="30"/>

    <!-- Configuration submenu -->
    <menuitem id="menu_jsocr_configuration"
              name="Configuration"
              parent="menu_jsocr_root"
              groups="js_invoice_ocr_ia.group_jsocr_admin"
              sequence="90"/>

    <!-- System configuration menu item -->
    <menuitem id="menu_jsocr_config"
              name="Parametres Systeme"
              parent="menu_jsocr_configuration"
              action="jsocr_config_action"
              groups="js_invoice_ocr_ia.group_jsocr_admin"
              sequence="10"/>
</odoo>
