<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job: Scan Input Folder for new PDFs (Story 3.4) -->
        <record id="ir_cron_jsocr_scan_folder" model="ir.cron">
            <field name="name">JSOCR: Scan Input Folder</field>
            <field name="model_id" ref="model_jsocr_config"/>
            <field name="state">code</field>
            <field name="code">model.scan_input_folder()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
        </record>

        <!-- Cron Job: Process Pending Jobs (Story 4.11 - FR32) -->
        <record id="ir_cron_jsocr_process_jobs" model="ir.cron">
            <field name="name">JSOCR: Process Pending Jobs</field>
            <field name="model_id" ref="model_jsocr_import_job"/>
            <field name="state">code</field>
            <field name="code">model.cron_process_pending_jobs()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active">True</field>
            <field name="priority">10</field>
        </record>

    </data>
</odoo>
